<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/text_header">

        <ListPreference
            app:defaultValue="black"
            app:entries="@array/text_entries"
            app:entryValues="@array/text_values"
            app:key="text_key"
            app:title="@string/text_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/button_header">

        <SwitchPreferenceCompat
            app:key="button_key"
            app:title="@string/button_title"
            />

    </PreferenceCategory>

</PreferenceScreen>